{
  "name": "@thespielplatz/wall-spark-engine",
  "version": "1.1.0",
  "author": "Philipp Horwath",
  "license": "MIT",
  "private": false,
  "description": "a WLED Pixel Display Render/Game Engine",
  "homepage": "https://github.com/thespielplatz/WallSparkEngine",
  "bugs": {
    "url": "https://github.com/thespielplatz/WallSparkEngine/issues"
  },
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "type": "module",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": "./dist/index.js",
      "default": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "cd playground && npm run dev",
    "audit": "better-npm-audit audit",
    "typecheck": "npx tsc",
    "lint": "eslint . --max-warnings 0",
    "check-exports": "attw --pack . --ignore-rules=cjs-resolves-to-esm",
    "bump-version": "changelogen --release && git push --follow-tags",
    "release": "npm run build && npm run check-exports && npm run lint && npm publish --access public"
  },
  "dependencies": {
    "ansi-escapes": "^7.0.0",
    "cron": "^4.1.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.17.4",
    "@eslint/js": "^9.23.0",
    "@types/node": "^20.17.6",
    "@typescript-eslint/eslint-plugin": "^8.27.0",
    "better-npm-audit": "^3.11.0",
    "changelogen": "^0.6.1",
    "eslint": "^9.23.0",
    "globals": "^16.0.0",
    "jiti": "^2.4.2",
    "tsup": "^8.4.0",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.27.0"
  }
}
